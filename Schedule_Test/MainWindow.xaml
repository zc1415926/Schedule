<Window x:Class="Schedule_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnConvertExcel" Content="生成教学计划" HorizontalAlignment="Left" Margin="10,139,0,0" VerticalAlignment="Top" Width="227" Height="39" Click="btnConvertExcel_Click"/>
        <ProgressBar x:Name="probarConvertProgress" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" VerticalAlignment="Top" Width="227" Value="0" IsIndeterminate="False"/>
        <Button x:Name="btnOpenAllSchoolSchedule" Content="打开全校总课表->生成排课结果" HorizontalAlignment="Left" Margin="10,183,0,0" VerticalAlignment="Top" Width="227" Height="38" Click="btnOpenAllSchoolSchedule_Click"/>
        <TextBox x:Name="txtTextBox" HorizontalAlignment="Left" Height="300" Margin="281,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Focusable="False" IsReadOnly="True" IsTabStop="False" IsUndoEnabled="False"/>
        <Separator HorizontalAlignment="Left" Height="19" Margin="10,226,0,0" VerticalAlignment="Top" Width="227"/>
        <Button x:Name="btnXRhjxxConverter" Content="重庆天地课表转换" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top" Width="227" Height="39" Click="btnXRhjxxConverter_Click"/>
    </Grid>
</Window>
